    public int XorOperation(int n, int start) {
        
//         int[] intArray = new int[n];
//         intArray[0] = start;
        
//         for(int i = 1; i < n; i++)
//         {
//             intArray[i] = start + 2 * i;
//         }
//         int result = start;
        
//         for(int j = 1; j < intArray.Length; j++)
//         {
//             result = result ^ intArray[j];
//         }
//         return result;

        int result = 0;
        
        for(int i = 0; i < n; i++)
        {
            int num = start + 2 * i;
            
            result = result ^ num;
        }
        return result;
    }
